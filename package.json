{
  "name": "vue-module-helper",
  "displayName": "vue-module-helper",
  "publisher": "mathiasm",
  "license": "MIT",
  "description": "",
  "version": "0.4.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/MathiasMonstrey/vsce-vue-module-helper"
  },
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/src/shims-vue.d.ts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Vue module helper",
        "properties": {
          "vmh.addModuleToName": {
            "type": "boolean",
            "default": true,
            "description": "Auto add '-module' to name"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vmh.addModule",
        "title": "Add module"
      },
      {
        "command": "vmh.addComponent",
        "title": "Add component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder && createIsActive && resource =~ /.*/src/.*",
          "command": "vmh.addModule"
        },
        {
          "when": "explorerResourceIsFolder && createIsActive && resource =~ /.*/src/.*",
          "command": "vmh.addComponent"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./ && xcopy \"src/templates/*\" \"out/templates/\" /F /Y",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/vscode": "^1.56.0",
    "glob": "^7.1.7",
    "mocha": "^9.0.0",
    "ts-loader": "^9.2.3",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.170",
    "lodash": "^4.17.21"
  }
}
